!!! 5
%html{:lang => 'en'}
  %head
    %title= "KittenBreak 2! #{genre}"
    %script{:src => 'http://code.jquery.com/jquery-1.9.1.min.js'}
    %script{:src => '//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js'}
    %script{:src => '//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.0.0/backbone-min.js'}      
    %link{:rel => "stylesheet", :href=>"http://twitter.github.com/bootstrap/assets/css/bootstrap.css"}
    %script{:src => 'http://twitter.github.com/bootstrap/assets/js/bootstrap.min.js'}

  %body
    %header.navbar
      .navbar-inner
        %a.brand{:href => url('/')}
          = "KittenBreak 2! #{genre}"
    .row-fluid
      .span4.offset2
        .alert.alert-block.alert-info
          %button.close{:type => 'button', :data => {:dismiss => 'alert'}} &times;
          Click on the image to see another!
    .row-fluid
      .span4.offset2
        #content


    %footer.navbar.navbar-fixed-bottom
      .navbar-inner
        %ul.nav.nav-pills
          - genres.each do |g|
            %li
              %a{:href => url("/#{g}")}
                = g
            
